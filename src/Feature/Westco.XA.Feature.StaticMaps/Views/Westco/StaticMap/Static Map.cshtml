@using System
@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@model Westco.XA.Feature.StaticMaps.Models.StaticMapRenderingModel

@if (Model.DataSourceItem == null)
{
    @Model.MessageIsEmpty
}
else
{
    <div @Html.Sxa().Component("static-map", Model.Attributes) data-properties='@Model.JsonDataProperties' style="@Model.Height; @Model.Width">
        <div class="component-content" style="height: 100%; width: 100%">
            @Model.MessageEditHere
            <div id="@Guid.NewGuid().ToString()" class="static-map" style="height: 100%; width: 100%">
                @if (Sitecore.Context.PageMode.IsExperienceEditorEditing)
                {
                    <div class="alert alert-warning" role="alert">
                        The StaticMap base theme is missing from the site theme.
                    </div>
                }
            </div>
        </div>
    </div>
}